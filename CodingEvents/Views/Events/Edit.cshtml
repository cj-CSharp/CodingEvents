<h1>Edit Event Number @ViewBag.thisEvent.Id</h1>

<form method="post" action="/events/edit">
    <input type="hidden" value="@ViewBag.thisEvent.Id" name="eventId" />
    <label>Name of Event: <input type="text" name="name" value="@ViewBag.thisEvent.Name" /></label>
    <label>Description: <input type="text" name="description" value="@ViewBag.thisEvent.Description" /></label>
    <input type="submit" value="Edit Event" />
</form>